\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemecrns}[2017/01/23 CRNS color theme]
\RequirePackage{pgfopts}
\pgfkeys{
  /crns/color/block/.cd,
    .is choice,
    transparent/.code=\crns@block@transparent,
    fill/.code=\crns@block@fill,
}
\pgfkeys{
  /crns/color/background/.cd,
    .is choice,
    dark/.code=\crns@colors@dark,
    light/.code=\crns@colors@light,
}
\newcommand{\crns@color@setdefaults}{
  \pgfkeys{/crns/color/.cd,
    background=light,
    block=transparent,
  }
}

